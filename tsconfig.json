{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ES6",
    "module": "commonjs",
    "skipLibCheck": true,
    "types": ["node"],
    "outDir": "dist",
    "strict": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./node_modules/@prisma/client"],
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@utils/*": ["src/utils/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@types/*": ["src/types/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
